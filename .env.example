# Progress Mate Environment Configuration
# Copy this file to .env and update the values as needed

# Application Configuration
REACT_APP_NAME=Progress Mate
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Your comprehensive cybersecurity learning journey tracker

# API Configuration (if needed in future)
REACT_APP_API_URL=https://api.progress-mate.com
REACT_APP_API_KEY=your_api_key_here

# Analytics (optional)
REACT_APP_GA_TRACKING_ID=GA_TRACKING_ID
REACT_APP_MIXPANEL_TOKEN=MIXPANEL_TOKEN

# Feature Flags
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_ANALYTICS=false

# Development Configuration
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info

# Local Storage Keys (for reference)
REACT_APP_STORAGE_KEYS_USER_PROGRESS=userProgress
REACT_APP_STORAGE_KEYS_SETTINGS=appSettings
REACT_APP_STORAGE_KEYS_THEME=theme
REACT_APP_STORAGE_KEYS_LANGUAGE=language